{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "NeoHtop",
    "version": "0.1.2"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.neohtop.dev",
      "targets": ["app", "dmg"],
      "macOS": {
        "signingIdentity": "Developer ID Application: Abdenasser Elidrissi (785JV74B9Y)",
        "hardenedRuntime": true,
        "entitlements": null,
        "providerShortName": null
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "NeoHtop",
        "width": 1280,
        "minWidth": 1180,
        "minHeight": 600
      }
    ]
  }
}
